<body>
    <% include partials/head.ejs %>
    <h1>Contact me from here !</h1>
    
    <form id="contactForm" method="POST" action="/contact" class="col-sm-10 offset-sm-1">
        <div class="input-group">
            <div class="input-groupe-prepend col-sm-3">
                <span class="input-group-text">Email</span>
            </div>
            <input type="email" name="email" class="form-control col-sm-6" placeholder="fake.example@test.com">
        </div>
        <div class="input-group">
            <div class="input-groupe-prepend col-sm-3">
                <span class="input-group-text">Object</span>
            </div>
            <input type="text" name="object" class="form-control col-sm-6">
        </div>
        <div class="input-group">
            <textarea type="textarea" name="message" class="form-control offset-sm-3 col-sm-6" placeholder="Message" rows="5"></textarea>
        </div>
        <input type="submit" value="submit" class="btn btn-success offset-sm-8" style="width: 8.33%">
    </form>
</body>